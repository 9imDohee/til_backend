package com.ssafy.servlet;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.List;

import com.ssafy.dto.Person;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/user")
public class UserServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	/*
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		doProcess(req, resp);
	}



	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		doProcess(req,resp);
	}

	private void doProcess(HttpServletRequest req, HttpServletResponse resp) {
		String act = req.getParameter("act");
		// act: CRUD

	}

	 */
	
	// doGet + doPost
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html; charset=UTF-8");
		String act = request.getParameter("act");
		
		switch(act) {
		
		case"regist":
			doRegist(request, response); // request: 회원 정보 포함
			break;
		
		case "getList":
			doList(request,response);
			break;
			
			
			
		}
		
	}

	private void doList(HttpServletRequest request, HttpServletResponse response) {
	PrintWriter writer = response.getWriter();          
		

		
		writer.append("<html>");
		writer.append("<head>");
		writer.append("<title>등록 정보 </title>");
		writer.append("</head>");
		writer.append("<body>");
		writer.append("<h2>동록된 사람 정보</h2>");
		writer.append(p.toString());
		writer.append("<body>");
		writer.append("<html>");
		for(int i=0;i<memory.size(); i++{
			writer.append("/<li>");
			writer.append(memory.get(i).getName);
			
			
		}
	}

	private void doRegist(HttpServletRequest request, HttpServletResponse response) throws IOException {
		// 회원 정보 꺼내기
		// getParameter에는 키 값이 들어감
		String name=request.getParameter("name");
		int age = Integer.parseInt(request.getParameter("age"));
		String gender = request.getParameter("gender");
		String[] hobbies = request.getParameterValues("hobby");
		
		Person p = new Person(name, age, gender, hobbies);
		
		// 임시로 저장
		List<Person> memory = new ArrayList<>();
		
		
		PrintWriter writer = response.getWriter();          
		
		memory.add(p);
		
		writer.append("<html>");
		writer.append("<head>");
		writer.append("<title>등록 정보 </title>");
		writer.append("</head>");
		writer.append("<body>");
		writer.append("<h2>동록된 사람 정보</h2>");
		writer.append(p.toString());
		writer.append("<body>");
		writer.append("<html>");

		
		
		
	}
}
