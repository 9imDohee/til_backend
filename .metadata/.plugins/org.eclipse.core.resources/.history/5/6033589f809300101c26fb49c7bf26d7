package com.ssafy.servlet;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;

@WebServlet("/hello") //URL 매핑
public class HelloServlet extends HttpServlet { // httpServlet 클래스를 상속
	private static final long serialVersionUID = 1L;
       

	// 서블릿에 요청을 보내게 되면 초기에 실행되는 메서드: Service
	@Override
	public void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// 사용자의 요청이 들어가 있는 객체 HttpServletRequest req
		// 메서드: GET / POST,,,,
		// IP정보
		// 쿼리 스트링 http://localhost.8080/hello?**name=홍길동**
		
		// 사용자에게 응답을 위한 객체 httpServletResponse resp
		// 사용자에게 보낼 패킷의 헤더 정보
		// 사용자에게 보낼 body 데이터
	}
	@Override
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html;charset=UTF-8");
		PrintWriter writer = response.getWriter();
		writer.write("<html>");
		writer.write("<head>");
		writer.write("<title>Hell01 SSAFY</title>");
		writer.write("</head>");
		writer.write("<body>");
		writer.write("<h1> Hello! Servlet!</h1><br>");
		writer.write("<p>Hello! SSAFY</p>");
		writer.write("</body>");
		writer.write("</html>");
	}


}
